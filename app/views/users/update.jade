extends auth

block auth
  br
  strong
   a(href="/") <- Home
  form.signup.form-horizontal(action="/users/"+user._id+"/edit", method="post")
    input(type="hidden", name="_method", value="PUT")
    .control-group
      label.control-label(for='email') Email
      .controls
        if(user.is_holder)
          -var email=""
        else
          -var email=user.email

        input#email(autocapitalize="off",autocorrect="off",type='text', name="email", placeholder='Email', value=email)

    .control-group
      label.control-label(for='username') Username
      .controls
        input#username(autocapitalize="off",autocorrect="off",type='text', name="username", placeholder='Username', value=user.username)

    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(autocapitalize="off",autocorrect="off",type='password', name="password", placeholder='Password')

    .form-actions
      button.btn.btn-primary(type='submit') Save Settings 

